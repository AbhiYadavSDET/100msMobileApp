<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Zip Flow">

    <parameter name="build" value="prod"/>
    <parameter name="level" value="payments"/>
    <parameter name="cloudRun" value="true"></parameter>

    <listeners>
        <listener class-name="Utils.Listeners.AnnotationTransformer"/>
        <listener class-name="Utils.ExtentReportListener"/>
    </listeners>


    <test verbose="2" preserve-order="true" name="Verify Zip Test">
        <groups>
            <run>
                <include name="setUp"/>
                <include name="instantiateHelpers"/>
                <include name="verifyZipPage"/>
                <include name="tearDown"/>
            </run>
        </groups>


        <classes>
            <class name="Utils.TestBase"/>
            <class name="Zip.ZipTest"/>
        </classes>
    </test>

</suite>