<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Test Suite" thread-count="2" parallel="tests">

    <test preserve-order="true" name="Regression Test Part 1">
        <parameter name="build" value="prod"/>
        <parameter name="level" value="payments"/>
        <parameter name="saucelabs" value="false"></parameter>
        <parameter name="androidOSVersion" value="12.0"></parameter>
        <parameter name="deviceName" value="ZD22275HZK"></parameter>
        <parameter name="portNo" value="4723"></parameter>

        <groups>
            <run>
                <include name="setUp"/>
                <include name="instantiateHelpers"/>
                <include name="regression"/>
                <include name="tearDown"/>
            </run>
        </groups>

        <classes>
            <class name="Utils.TestBase"/>
            <class name="P2PExtra.P2PExtraTest"/>
            <class name="MutualFunds.MutualFundsTest"/>
            <class name="Loan.LoanTest"/>
            <class name="Zip.ZipTest"/>
            <class name="Offers.OfferTest"/>
        </classes>
    </test>

    <test preserve-order="true" name ="Regression Test Part 2">
        <parameter name="build" value="prod"/>
        <parameter name="level" value="payments"/>
        <parameter name="saucelabs" value="false"></parameter>
        <parameter name="androidOSVersion" value="12.0"></parameter>
        <parameter name="deviceName" value="172.18.1.255:5555"></parameter>
        <parameter name="portNo" value="4724"></parameter>
        <groups>
            <run>
                <include name="setUp"/>
                <include name="instantiateHelpers"/>
                <include name="regression"/>
                <include name="tearDown"/>
            </run>
        </groups>


        <classes>
            <class name="Utils.TestBase"/>
            <class name="Rewards.RewardsTest"/>
            <class name="HelpAndSupport.Test_HelpAndSupport"/>
            <class name="PayRent.PayRentTest"/>
            <class name="AccountAggregator.Test_AccountAggregator"/>
            <class name="CentralMapper.Test_CentralMapper"/>
        </classes>
    </test>

</suite>