<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Appium-Framework">
    <listeners>
        <listener class-name="UITestFramework.retryLogic.RetryListener"/>
        <listener class-name="main.java.utils.Listeners.TestListener"/>
        <!--<listener class-name="main.java.utils.ExtentReporterNG"/>-->
    </listeners>
    <parameter name="build" value="prod"/>
    <parameter name="level" value="payments"/>
    <parameter name="saucelabs" value="false"></parameter>
    <parameter name="methodName" value="logout"></parameter>


    <test name="Mobikwik Automation Tests">
        <groups>
            <run>
                <include name="setUp"/>
                <include name="instantiateHelpers"/>
                <include name="ola"/>
                <include name="tearDown"/>
            </run>
        </groups>

        <classes>
            <class name="UITestFramework.CreateSession"/>
            <class name="test.java.AndroidApp.Test.Ola.Test_Ola"/>
        </classes>

    </test>
</suite>