<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="sanitySuit">
    <listeners>
        <listener class-name="UITestFramework.retryLogic.RetryListener"/>
        <listener class-name="main.java.utils.Listeners.TestListener"/>
    </listeners>
    <parameter name="build" value="prod"/>
    <parameter name="level" value="payments"/>
    <parameter name="saucelabs" value="false"></parameter>
    <parameter name="methodName" value="sanity"></parameter>


    <test name="loginSanity">
        <groups>
            <run>
                <include name="setUp"/>
                <include name="instantiateHelpers"/>
                <include name="logout"/>
                <include name="tearDown"/>
            </run>
        </groups>
        <classes>
            <class name="UITestFramework.CreateSession"/>
            <class name="UITestFramework.ExtentReport.Reporter"/>
            <class name="test.java.AndroidApp.Test.Login.Test_login"/>
        </classes>
    </test>

    <test name="addMoneySanity">
        <groups>
            <run>
                <include name="setUp"/>
                <include name="instantiateHelpers"/>
                <include name="addMoneySanity"/>
                <include name="tearDown"/>
            </run>
        </groups>
        <classes>
            <class name="UITestFramework.CreateSession"/>
            <class name="UITestFramework.ExtentReport.Reporter"/>
            <class name="test.java.AndroidApp.Test.AddMoney.Test_AddMoney"/>
        </classes>
    </test>

    <test name="rechargeSanity">
        <groups>
            <run>
                <include name="setUp"/>
                <include name="instantiateHelpers"/>
                <include name="rechargeSanity"/>
                <include name="tearDown"/>
            </run>
        </groups>
        <classes>
            <class name="UITestFramework.CreateSession"/>
            <class name="UITestFramework.ExtentReport.Reporter"/>
            <class name="test.java.AndroidApp.Test.Recharge.Test_Recharge"/>
        </classes>
    </test>


</suite>